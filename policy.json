{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3GetObjectPolicy",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": "arn:aws:s3:::lab1-s3-bucket/*"
        },
        {
            "Sid": "S3PutObjectNotificationPolicy",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject"
            ],
            "Resource": "arn:aws:s3:::lab1-s3-bucket",
            "Condition": {
                "ArnLike": {
                    "aws:SourceArn": "arn:aws:s3:::lab1-s3-bucket"
                }
            }
        },
        {
            "Sid": "BatchSubmitJobPolicy",
            "Effect": "Allow",
            "Action": [
                "batch:SubmitJob"
            ],
            "Resource": [
                "arn:aws:batch:us-west-2:000123456789:job-definition/lab1-def:8",
                "arn:aws:batch:us-west-2:000123456789:job-queue/lab1-queue"
            ]
        },
        {
            "Sid": "LambdaExecutePolicy",
            "Effect": "Allow",
            "Action": [
                "lambda:InvokeFunction"
            ],
            "Resource": "arn:aws:lambda:us-west-2:000123456789:function:lab1-lambda-function-role",
            "Condition": {
                "ArnLike": {
                    "AWS:SourceArn": "arn:aws:s3:::lab1-s3-bucket"
                }
            }
        }
    ]
}
